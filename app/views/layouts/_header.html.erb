<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("link.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("link.home"), root_path %></li>
        <li><%= link_to t("link.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("link.users"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("link.account") %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("link.profile"), current_user %></li>
              <li><%= link_to t("link.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("link.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("link.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
